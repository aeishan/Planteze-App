<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#d8dbe2"
    tools:context=".HabitSuggestions.Activities.HabitMenu">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_habits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:itemCount="20"
        tools:listitem="@layout/recycler_habit_item" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:iconifiedByDefault="false"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addHabit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/add"
        android:layout_margin="16dp"
        app:backgroundTint="#373f51"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Add habit"
        />

</FrameLayout>